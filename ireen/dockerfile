# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Set the working directory inside the container
WORKDIR /code

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       gcc \
       python3-dev \
       libpq-dev \
       pkg-config \
       default-libmysqlclient-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy the requirements file first
COPY requirements.txt /code/

# Install Python dependencies
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Copy the API Gateway code into the container
COPY . /code/

# Copy db.json into the container (optional if you prefer volume mounting)
COPY db.json /code/data/

# Expose the port on which the API Gateway will run
EXPOSE 8005

# Run the API Gateway service (you can also include initialization commands here if needed)
CMD ["python", "manage.py", "runserver", "0.0.0.0:8005"]
